<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/p2p_linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_mono"
                android:paddingEnd="5dp"
                android:text="@string/contact_1"
                android:textAlignment="center"
                android:textSize="@dimen/common_textSize" />

            <Spinner
                android:id="@+id/spinner_contact_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:spinnerMode="dialog"
                android:prompt="@string/spinner_prompt_choose_contact"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_mono"
                android:paddingEnd="5dp"
                android:text="@string/contact_2"
                android:textAlignment="center"
                android:textSize="@dimen/common_textSize" />

            <Spinner
                android:id="@+id/spinner_contact_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:spinnerMode="dialog"
                android:prompt="@string/spinner_prompt_choose_contact" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/p2p_linearLayout"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="30dp"
        android:text="@string/search"
        android:textSize="@dimen/common_textSize" />
</RelativeLayout>