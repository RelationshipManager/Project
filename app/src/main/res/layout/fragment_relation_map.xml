        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- TODO: Update blank fragment layout -->
    <ExpandableListView
        android:paddingTop="10dp"
        android:id="@+id/expandable_list_view"
